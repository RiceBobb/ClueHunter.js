{
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "checkJs": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "types": ["mocha", "node"],
      "rootDir": "../src",
      "outDir": "../lib"
    },
    "include": ["../src/**/*"]
}
